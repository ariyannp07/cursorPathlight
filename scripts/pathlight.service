[Unit]
Description=Pathlight Autonomous Navigation System
After=network.target
Wants=network.target

[Service]
Type=simple
User=nvidia
Group=nvidia
WorkingDirectory=/home/nvidia/pathlight
Environment=PYTHONPATH=/home/nvidia/pathlight
ExecStart=/usr/bin/python3 /home/nvidia/pathlight/scripts/autonomous_startup.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/home/nvidia/pathlight/data /home/nvidia/pathlight/logs

# Resource limits
LimitNOFILE=65536
LimitNPROC=4096

[Install]
WantedBy=multi-user.target
